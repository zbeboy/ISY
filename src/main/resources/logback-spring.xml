<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_FILE" value="${LOG_PATH}/${LOG_FILE}"/>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
    <include resource="org/springframework/boot/logging/logback/file-appender.xml"/>
    <springProfile name="dev">
        <logger name="org.springframework.web" level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="org.webjars" level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="org.thymeleaf" level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="org.jboss" level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="io.undertow" level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="com.alibaba" level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="org.apache" level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="org.jooq" level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="top.zbeboy.isy" level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>

    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
</configuration>